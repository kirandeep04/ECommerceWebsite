@model IEnumerable<E_Commerce_Website.Areas.Admin.Models.CategoryUIViewModel>

@{
    //view.Title = "Get Categories";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h2 class="text-center text-primary mb-4">Category List</h2>
    <p>
        <a href="Create" class="btn btn-primary">Create New</a>
        @*<a class="btn btn-sm btn-primary p-1 m-1" asp-area="Admin" asp-action="Create" asp-Controller="Category">Create Category</a>*@
    </p>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsActive</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.IsActive</td>
                    <td>
                         <a href="Edit"  asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        |
                        <a href="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                   @* <td> <a class="btn btn-sm btn-primary" asp-area="Admin" asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id">Edit</a></td>
                    |
                    <td> <a class="btn btn-sm btn-danger m-1" asp-area="Admin" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</a></td>*@
                    
                </tr>
            }
        </tbody>

    </table>
</body>
</html>
