@model E_Commerce_Website.Models.LoginAPIModel
<!DOCTYPE html>
<html>
<head>
    <style>
        img {
            display: block;
            margin: auto;
            width: 50%;
            padding: 30px;
        }

        form {
            width: 100%;
            max-width: 410px;
            padding: 15px;
            margin: auto;
        }

        h2 {
            align-content: center;
            width: 75%;
            color: indigo;
        }

        .wrapper {
            max-width: 350px;
            min-height: 300px;
            margin: 10px auto;
            padding: 40px 30px 30px 30px;
            background-color: #ecf0f3;
            border-radius: 15px;
            box-shadow: 13px 13px 20px #cbced1, -13px -13px 20px #fff;
        }
    </style>
    <title>Admin Login</title>
</head>
<body>
    <div class="table-responsive">
        <div class="wrapper">
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
            {
                <img src="~/img/logo.png" />
                <h2>Admin Login</h2>
                <form>
                    <div>
                        <label asp-for="Username">Username:</label>
                        <input asp-for="Username" placeholder="Enter Username" />
                        <span asp-validation-for="Username"></span>
                    </div>
                    <br>
                    <div>
                        <label asp-for="Password">Password:</label>
                        <input asp-for="Password" placeholder="Enter Password" type="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <br>
                    <div class="checkbox">
                        <label><input type="checkbox" name="remember"> Remember me</label>
                    </div><br>
                    <div>
                        <button type="submit" style="background-color: #dd4b39" name="action">LOGIN</button>
                    </div>
                    <br>
                    <div> <a href="#" id="forgot_pswd">Forgot password?</a></div>
                    <hr>
                    <br>
                    <div>
                        <a asp-area="Admin" asp-controller="AdminLogin" asp-action="SignUp">SignUp</a>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>




